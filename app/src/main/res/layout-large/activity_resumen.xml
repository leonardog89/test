<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.leo.test.Presentation.AplicationDetail.Implementation.AplicationActivity"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageResumen"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="28dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/nameView"
        android:layout_alignTop="@+id/imageResumen"
        android:layout_toRightOf="@+id/imageResumen"
        android:layout_toEndOf="@+id/imageResumen"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/autorView"
        android:layout_below="@+id/nameView"
        android:layout_toRightOf="@+id/imageResumen"
        android:layout_toEndOf="@+id/imageResumen"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/priceView"
        android:layout_above="@+id/rightView"
        android:layout_alignLeft="@+id/rightView"
        android:layout_alignStart="@+id/rightView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/releaseView"
        android:layout_gravity="right"
        android:layout_below="@+id/autorView"
        android:layout_toRightOf="@+id/imageResumen"
        android:layout_toEndOf="@+id/imageResumen" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/linkView"
        android:layout_below="@+id/contentView"
        android:layout_alignLeft="@+id/contentView"
        android:layout_alignStart="@+id/contentView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/contentView"
        android:layout_gravity="right"
        android:layout_below="@+id/imageResumen"
        android:layout_alignLeft="@+id/imageResumen"
        android:layout_alignStart="@+id/imageResumen" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/rightView"
        android:layout_gravity="right"
        android:layout_below="@+id/autorView"
        android:layout_alignRight="@+id/autorView"
        android:layout_alignEnd="@+id/autorView" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/sumVIew"
        android:layout_below="@+id/linkView"
        android:layout_alignLeft="@+id/linkView"
        android:layout_alignStart="@+id/linkView"
        android:layout_margin="10dp" />

</RelativeLayout>
